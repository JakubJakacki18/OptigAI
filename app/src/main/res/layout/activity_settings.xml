<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2174AB">

    <include layout="@layout/navbar" />


    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chosen_gallery_view"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/viewRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/settingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/gridRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/grid_view"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/listRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_view"/>
    </RadioGroup>

    <TextView
        android:id="@+id/isPhotoSavingOptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_photo_saving_option_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/isPhotoSavingRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/isPhotoSavingOptionTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/yesIsPhotoSavingRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:layout_marginEnd="16dp"/>

        <RadioButton
            android:id="@+id/noIsPhotoSavingRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"/>
    </RadioGroup>

    <TextView
        android:id="@+id/colorToggleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_photo_saving_option_title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/isPhotoSavingRadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/colorToggleGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/colorToggleTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ToggleButton
            android:id="@+id/toggle_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_red_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_red_on"
            android:textOff="@string/toggle_button_color_red_off"
            />
        <ToggleButton
        android:id="@+id/toggle_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/toggle_border_color_blue_bg"
        android:layout_columnWeight="1"
        android:textOn="@string/toggle_button_color_blue_on"
        android:textOff="@string/toggle_button_color_blue_off"
        />

        <ToggleButton
            android:id="@+id/toggle_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_green_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_green_on"
            android:textOff="@string/toggle_button_color_green_off"
            />
        <ToggleButton
            android:id="@+id/toggle_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_yellow_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_yellow_on"
            android:textOff="@string/toggle_button_color_yellow_off"
            />        <ToggleButton
            android:id="@+id/toggle_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_orange_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_orange_on"
            android:textOff="@string/toggle_button_color_orange_off"
            />
        <ToggleButton
            android:id="@+id/toggle_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_purple_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_purple_on"
            android:textOff="@string/toggle_button_color_purple_off"
            />
        <ToggleButton
            android:id="@+id/toggle_cyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_cyan_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_gray_on"
            android:textOff="@string/toggle_button_color_gray_off"
            />
        <ToggleButton
            android:id="@+id/toggle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_black_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_black_on"
            android:textOff="@string/toggle_button_color_black_off"
            />
        <ToggleButton
            android:id="@+id/toggle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/toggle_border_color_white_bg"
            android:layout_columnWeight="1"
            android:textOn="@string/toggle_button_color_white_on"
            android:textOff="@string/toggle_button_color_white_off"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>