<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="contentDescription"
            type="String" />
    </data>
    <FrameLayout
        android:id="@+id/color_item_root"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">

        <!-- the round colored shape (MaterialCardView with stroke) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/colorCircle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="32dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/dark_blue"
            app:checkable="true"
            android:contentDescription="@{contentDescription}">

            <TextView
                android:id="@+id/checkMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_annotation_checkmark_value"
                android:textSize="24sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:textColor="@android:color/white"/>
        </com.google.android.material.card.MaterialCardView>


    </FrameLayout>
</layout>
