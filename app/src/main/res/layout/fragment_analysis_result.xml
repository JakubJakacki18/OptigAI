<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".ui.AnalysisResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/analyzedPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:importantForAccessibility="no"
                android:focusable="false"
                android:contentDescription="@null"

                />

            <pl.pb.optigai.ui.DetectionOverlay
                android:id="@+id/overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/resultScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/analysis_result_box"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:contentDescription="@string/photo_analysis_text_box">

        <TextView
            android:id="@+id/summaryResultText"
            android:layout_margin="15dp"
            android:textSize="28sp"
            android:fontFamily="@font/signikasb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/error_result_fragment_analysis_result"/>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>