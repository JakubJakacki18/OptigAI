<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/darkblue" />
            <stroke
                android:width="3dp"
                android:color="@color/creme" />
            <corners android:radius="1000dp" />
        </shape>
    </item>

    <item
        android:top="7dp"
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/creme" />
            <corners android:radius="1000dp" />
        </shape>
    </item>

    <item
        android:drawable="@drawable/ic_eye"
        android:top="12dp"
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp" />
</layer-list>